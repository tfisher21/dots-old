# Brewfile

# Casks

# Google Chrome - Web browser
cask google-chrome
# Discord - Voice and text chat software
cask discord
# iTerm2 - macOS Terminmal Replacement
cask "iterm2"
# Docker - Pack, ship and run any application as a lightweight container
cask "docker"
# Rectangle - Move and resize windows in macOS using keyboard shortcuts or snap areas
cask "rectangle"

# Fonts
brew "homebrew/cask-fonts"
# subversion - Version control system designed to be a better CVS
# (required for the font installation)
brew "svn"
# Font - Source Code Pro
cask "font-source-code-pro"

# Git - Distributed revision control system
brew "git"

# Ruby
# rbenv - Ruby version manager
brew "rbenv"
# rbenv-default-gems - Auto-installs gems for Ruby installs
brew "rbenv-default-gems"
# rbenv-gemset - Adds basic gemset support to rbenv
brew "rbenv-gemset"

# Node.js
# node - Platform built on V8 to build network applications
brew "node"
# nvm - Manage multiple Node.js versions
brew "nvm"

# Golang
# go - Open source programming language to build simple/reliable/efficient software
brew "go"

# Quick Look Plugins
# QLColorCode - QuickLook plug-in that renders source code with syntax highlighting
# cask qlcolorcode
# QLStephen - A QuickLook plugin that lets you view plain text files without a file extension
# cask qlstephen
# QLMarkdown - QuickLook generator for Markdown files
# cask qlmarkdown
# quick look JSON - QuickLook plugin for JSON files
# cask quicklook-json
# QLPrettyPatch - QuickLook generator for patch files
# cask qlprettypatch
# QuickLookCSV - QuickLook plugin for CSV files
# cask quicklook-csv
# BetterZip - Utility to create and modify archives
# cask betterzip
# WebPQuickLook - Quick Look Plugin for WebP Files
# cask webpquicklook
# Suspicious Package - Application for inspecting installer packages
# cask suspicious-package
